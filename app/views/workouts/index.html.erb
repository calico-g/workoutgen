<p><h4>Here is your workout. Enjoy!</h4></p>
<br>

<div>
<% if current_user.has_exes(:cardio) %>
	<p><%= @workout.cardio/2 %> minutes!</p>
	<ul>
	<li>
		<%= image_tag(@workout.cardios.image_url, :width => '150') %>
		<span class="ex_name">
		<%= link_to @workout.cardios.name,
			:controller => 'exes', :action => 'show', :id => @workout.cardios.id %>
		</span>
	</li>
	</ul>
<% else %>
	<p>You don't have any cardio exercises. You can add some here.</p>
<% end %>
</div>

<div>
<% if current_user.has_exes(:strength) %>
	<p>One minute of each!</p>
	<ul>
		<% @workout.strengths.each do |ex| %>
			<li>
			<%= image_tag(ex.image_url, :width => '150') %>
			<span class="ex_name">
			<%= link_to ex.name,
				:controller => 'exes', :action => 'show', :id => ex.id %>
			</span>
			</li>
		<% end %>
	</ul>
<% else %>
	<p>You don't have any strength exercises. You can add some here.</p>
<% end %>
</div>

<div>
<% if current_user.has_exes(:stretch) %>
	<ul>
		<% @workout.stretches.each do |ex| %>
			<li>
			<%= image_tag(ex.image_url, :width => '150') %>
			<span class="ex_name">
			<%= link_to ex.name,
				:controller => 'exes', :action => 'show', :id => ex.id %>
			</span>
			</li>
		<% end %>
	</ul>
<% else %>
	<p>You don't have any stretching exercises. You can add some here.</p>
<% end %>
</div>

<div>
	<% if current_user.has_exes(:cardio) %>
	<p><%= @workout.cardio/2 %> minutes!</p>
	<ul>
		<li>
		<%= image_tag(@workout.cardios.image_url, :width => '150') %>
		<span class="ex_name">
		<%= link_to @workout.cardios.name,
			:controller => 'exes', :action => 'show', :id => @workout.cardios.id %>
		</span>
		</li>
	</ul>
	<% end %>
</div>

<div>
	This workout sucks. <%= link_to "Give me a new one.", workouts_path(:workout => params[:workout]), :method => 'get' %>
</div>
